<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Outpatient Fitness Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/register.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/dashboard.css">
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
</head>
<body>

<div class="container" ng-app="myApp">
    <div class="register-heading">
        <div class="register-heading-text" >
            <img class="register-heading-image" src="/image/logo.png">
            Outpatient HealthCare
        <span>
      <input class="button button2"  type="button" onclick="location.href='http://localhost:3020/signin';" value="Login" />
     </span>
    </div>
</div>

<form  action="/" name ="registerForm" ng-controller="UserController" ng-submit="createUser()"
       class="register-form" method="POST">

    <div class="register-container">
        <label class="signup"> Sign Up</label>

        <div class="form-group">
            <label class= "register-label" for="email">Email</label>
            <input type="email" class="form-control" ng-model="user.email" name="email" placeholder="Email" required=""/>
        </div>

        <div class="form-group">
            <label class= "register-label" for="name" >Name</label>
            <input type="text" class="form-control" ng-model="user.registername" name="name" placeholder="Name" required=""/>
        </div>

        <div class="form-group">
            <label class= "register-label" for="password">Password</label>
            <input type="password" class="form-control" ng-model="user.password" name="password" placeholder="Password" required=""/>
        </div>

        <div class="form-group">
            <label class= "register-label" for="phone-number">Phone</label>
            <input type="phone" ng-pattern="phoneNumbr" class="form-control" ng-model="user.phone" name="phonenumber" placeholder="Phone" required=""/>
        </div>

        <div class="form-group">
            <label class= "register-label" for="Birth"> Age </label><br>
            <input type="text" class="form-control" ng-model="user.age" name="age" placeholder="Age" required=""/>
        </div>

        <span class="inline">
            <label class="inline-label" for="weight">Weight</label>
            <input type="text" class="inline-text" ng-model="user.weight" name="weight" placeholder="lbs"/>
            <label class="inline-label" for="height" >Height</label>
            <input type="text" class="inline-text" ng-model="user.height" name="height" placeholder="cms" />
      </span>

        <div class="form-group">
            <label class= "register-label" for="gender">Gender</label>
            <input class ="gender" id="r1" type="radio" name="gender" value="male" ng-model="user.gender"> Male &nbsp;
            <input  class ="gender" id="r2" type="radio" ng-model="user.gender" name="gender" value="female"> Female
        </div>

        <span class="inline">
              <button  class="inline-button" type="submit" class="btn" ng-submit="createUser()">Sign Up</button>
              <button class="inline-button" onclick="">Cancel</button>
      </span>
    </div>
</form>
<script>
    function UserController($scope, $http) {
        console.log('test')
        $scope.user = {};
        $scope.createUser = function () {
            $http({
                method: 'POST',
                url: '/',
                data: $scope.user
            })
        }
    }
</script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js'></script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js'></script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.18/angular-ui-router.js'></script>
</body>
</html>
